<script is:inline>
  document.addEventListener("astro:before-preparation", () => {
    document.querySelector(".animate-slide").classList.remove("hidden");
  });
  document.addEventListener("astro:after-preparation", () => {
    document.querySelector(".animate-slide").classList.add("hidden");
  });
</script>

<div
  transition:name="pageloader"
  class="animate-slide hidden fixed top-0 inset-x-0 h-0.5 z-100"
>
